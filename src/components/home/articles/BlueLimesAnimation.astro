---
import { Image } from "astro:assets";
import background from "@/assets/images/home/xinyi-wen-qjCHPZbeXCQ-unsplash.jpg";

import ArticleLink from "@/components/ui/ArticleLink.astro";
import VideoContainer from "@/components/ui/VideoContainer.astro";
---

<article class="homeArticle homeArticle--hasvideo">
  <div class="background">
    <Image src={background} alt="" />
  </div>
  <div class="content">
    <VideoContainer
      src="/assets/video/bluelimes-animate.mp4"
      poster="/assets/images/blue-limes-animation.webp"
      alt="Tetris-like blocks move depending on the mouse cursor position. They snap in place when the cursor hovers a call-to-action button."
      height="1080"
      width="1664"
      shadow={true}
      rounded={true}
    />
  </div>
  <ArticleLink href="/blue-limes-animation/" />
</article>

<style lang="scss">
  article {
    .background {
      position: absolute;
      height: 100%;
      width: 100%;

      img {
        height: 100%;
        width: 100%;
        object-fit: cover;
      }
    }

    .content {
      padding: var(--space-large);
    }
  }
</style>
