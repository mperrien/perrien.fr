---
import TechnologyTag from "@/components/ui/TechnologyTag.astro";

export interface Props {
  title: string;
  tags: string[];
  text?: string;
}

const props = Astro.props;
---

<header class="pageHeader">
  <h1 class="text-center">{props.title}</h1>
  {
    props.tags.length && (
      <ul class="pageHeader__tags list-reset">
        {props.tags.map((tag) => (
          <li>
            <TechnologyTag name={tag} />
          </li>
        ))}
      </ul>
    )
  }
  {props.text && <p class="pageHeader__text text-center">{props.text}</p>}
</header>

<style lang="scss">
  .pageHeader {
    grid-column: 2 / span 12;

    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: var(--space-large);

    h1 {
      margin-top: var(--space-large);
    }

    &__tags {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: center;
      gap: var(--space-small);
    }

    &__text {
      margin-top: var(--space-medium);

      font-size: 2.4rem;
      line-height: 1.5;
      max-width: 66ch;
    }
  }
</style>
